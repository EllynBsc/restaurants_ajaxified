<!-- #1. attaching my html code to a controller of stimulus. my controller is called counter. data-controller="nameOfStimulusController" -->

<div class="flex-center mt-4" data-controller="counter">
  <!-- #2.the element you want to update (the counter): target, querySelector/getElementByID -->
  <div class="counter">
    <!-- data-controllerStimulus-name-target="nameTarget" -->
    <span data-counter-target="count"><%= @restaurant_count %></span>

  </div>
  <!-- #3.the element listening to an event (the button) -->
  <!--  data-action="eventType->stimulusControllerName#FunctioName" -->
  <!-- document.addEventListener('click', functionname) -->
  <button class="btn btn-outline-secondary" data-action="click->counter#refresh">Refresh counter</button>
</div>


